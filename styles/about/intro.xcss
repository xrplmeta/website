.section.intro{
	> heading[secondary]{
		display: flex;
		gap: 8px;

		label{
			display: flex;
		}

		link{
			color: var(--color-link);

			&:hover{
				text-decoration: underline;
			}
		}
	}

	.checklist{
		font-size: 15px;
		line-height: 1.7;
		
		> flex{
			gap: 8px;
			margin-bottom: 3px;

			> label{
				font-size: 13px;
			}
		}
	}

	.checklist-and-notice{
		align-items: flex-start;
		justify-content: space-between;
	}
}