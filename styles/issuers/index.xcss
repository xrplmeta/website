.issuers{
	link.doc-link{
		display: flex;
		width: min-content;
		white-space: nowrap;
		background-color: var(--color-prosper);
		color: var(--color-shade-000);
		padding: 4px 8px;
		border-radius: 8px;
		margin-top: 10px;

		&:active{
			opacity: 0.7;
		}
	}

	.example-toml{
		font-family: var(--font-mono);
		border-radius: 5px;
		background-color: var(--color-inset);
		padding: 8px 10px;
		margin-bottom: 10px;
		font-size: 12px;
		white-space: pre-wrap;
		word-wrap: break-word;
	}
}