.for-issuers-notice{
	border: solid 1px var(--color-excite);
	padding: 5px;
	border-radius: 4px;
	align-items: flex-start !important;

	heading{
		font-weight: bold;
		color: var(--color-excite);
	}

	link{
		display: flex;
		padding: 4px 8px;
		border-radius: 4px;
		background-color: var(--color-excite);
		color: var(--color-shade-000);
		cursor: pointer;

		&:active{
			opacity: 0.75;
		}
	}
}

.checklist-and-notice{
	.for-issuers-notice{
		max-width: 250px;
	}
}