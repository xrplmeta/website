root.day{
	--font-mono: "SF Mono",ui-monospace,Menlo,Monaco,Consolas,"Liberation Mono","Courier New",monospace;
	--font-code: var(--font-mono);

	--color-shade-000: #f4f4f4;
	--color-shade-100: #eeeeee;
	--color-shade-200: #cfcfcf;
	--color-content: #111;
	--color-hint: #aaa;
	--color-trust: dodgerblue;
	--color-inset: #eaedf1;
	--color-guide: #cdd3db;
	--color-prosper: #00d26a;
	--color-warn: #ff8d00;
	--color-excite: #ff135c;
